@page "/hugelist"

@using LuminaireConfigurator.Shared

<h1>Configuration List</h1>

<p>List of configurations</p>

@if (luminaireConfigurations == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Configuration Name</th>
                <th>Creation Date</th>
                <th>Lamp Color (°K)</th>
                <th>Optic</th>
                <th>LampFlux (lm)</th>
            </tr>
        </thead>
        <tbody>
                <Virtualize Context="configuration" Items="@luminaireConfigurations">
