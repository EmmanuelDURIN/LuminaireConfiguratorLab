            {
*@ 
                <tr>
                    <td><a href="configurationdetails/@configuration.Id">@configuration.Name</a></td>
                    <td>@configuration.CreationTime.ToShortDateString()</td>
                    <td>@configuration.LampColor</td>
                    <td>@configuration.Optic</td>
                    <td>@configuration.LampFlux</td>
                </tr>
            @*}*@
    </Virtualize>
        </tbody>
    </table>
